/* 轮播图 */
.nav-swiper {
  width: 100%;
  height: 250rpx;
}
.swiper-image {
  width: 100%;
  height: 100%;
}
/* 分类导航 */
.nav-category {
  padding: 20rpx 0;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}
.cate-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.cate-item image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.cate-item text {
  margin-top: 10rpx;
  font-size: 28rpx;
}
/* 推荐 */
.recommend {
  padding: 0 20rpx;
  border: 1px solid red;
}
.recommend .head {
  height: 80rpx;
  line-height: 80rpx;
}
.recommend .head .shu {
  display: inline-block;
  margin-right: 10rpx;
  width: 6rpx;
  height: 20rpx;
  border-radius: 1px;
  background-color: #d00000;
}
.recommend .head .title {
  font-size: 28rpx;
}

.rec-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.rec-list-item {
  padding: 10rpx 0;
  width: 330rpx;
}
.goods-img {
  width: 100%;
  height: 330rpx;
}
.goods-img image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.goods-name{
  text-align: center;
}
.goods-name text {
  font-size: 28rpx;
}
